<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".AboutUsActivity">

    <ImageView
        android:id="@+id/btn_back_arrow"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="12dp"
        android:src="@drawable/back_button"
        app:tint="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABOUT US"
        android:textSize="16sp"
        android:fontFamily="sans-serif-black"
        android:letterSpacing="0.2"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="@id/btn_back_arrow"
        app:layout_constraintBottom_toBottomOf="@id/btn_back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/topDivider"
        android:layout_width="40dp"
        android:layout_height="3dp"
        android:background="#759EA5"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        app:layout_constraintStart_toStartOf="@id/txtTitle"
        app:layout_constraintEnd_toEndOf="@id/txtTitle"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/topDivider"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp">

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/logo_round"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Your ultimate companion for finding the perfect hotel stay. We provide seamless navigation and authentic reviews."
                android:textColor="#666666"
                android:textSize="14sp"
                android:lineSpacingMultiplier="1.2"
                android:layout_marginBottom="32dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DEVELOPMENT TEAM"
                android:textColor="#759EA5"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:textSize="13sp"
                android:layout_marginBottom="20dp"/>

            <include layout="@layout/item_team_member" android:id="@+id/member1" />
            <include layout="@layout/item_team_member" android:id="@+id/member2" />
            <include layout="@layout/item_team_member" android:id="@+id/member3" />
            <include layout="@layout/item_team_member" android:id="@+id/member4" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">
                <LinearLayout
                    android:id="@+id/btn_github"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_border"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/github"
                        app:tint="#000000" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:fontFamily="sans-serif-black"
                        android:text="VIEW SOURCE"
                        android:textColor="#000000"
                        android:textSize="13sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"
                android:layout_marginVertical="24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONTACT US"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="support@roomly.com"
                android:textColor="#555555"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/tvFormLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OPEN FEEDBACK FORM"
                android:textColor="#759EA5"
                android:fontFamily="sans-serif-black"
                android:textSize="14sp"
                android:padding="8dp"
                android:layout_marginBottom="32dp"
                android:clickable="true"
                android:focusable="true"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>