<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF6F3"
    tools:context=".EditProfileActivity">

    <!-- TOP BAR -->
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- CARD CONTAINER -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- PROFILE IMAGE + HINT -->
            <androidx.cardview.widget.CardView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="55dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/imgProfileEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_profile_placeholder"
                    android:scaleType="centerCrop"
                    android:contentDescription="Profile photo" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Tap photo to change"
                android:textColor="#777777"
                android:textSize="12sp" />

            <!-- EMAIL (READ ONLY) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Email"
                android:textStyle="bold"
                android:textColor="#333333"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:enabled="false"
                android:alpha="0.6"
                android:padding="14dp"
                android:background="@android:drawable/edit_text"
                android:inputType="textEmailAddress" />

            <!-- PASSWORD -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="New Password"
                android:textStyle="bold"
                android:textColor="#333333"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Leave empty if you don’t want to change"
                android:inputType="textPassword"
                android:padding="14dp"
                android:background="@android:drawable/edit_text" />

            <!-- SAVE BUTTON -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="SAVE CHANGES"
                android:textAllCaps="false"
                android:textColor="#333333"
                app:backgroundTint="#E8DFD1"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/ic_menu_save"
                app:iconPadding="10dp"
                app:iconTint="#333333" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- SMALL TIP TEXT -->
    <TextView
        android:id="@+id/txtTip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tip: Use a clear photo so your reviews look more trustworthy ✨"
        android:textColor="#777777"
        android:textSize="12sp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/cardEdit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
